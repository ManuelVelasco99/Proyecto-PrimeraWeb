<div class="container">  
    <div class="row mt-3">
            <div class="col-2"></div>
            <div class="col">
                <h2 class="text-center">Pago</h2>
                <h3 for="" class="">Metodo de pago</h3>
                <div class="form-group mt-3">                           
                            <input 
                                type="text" 
                                name="direccion" 
                                id="direccion"
                                class="form-control"
                                placeholder="Tarjeta de crédito"
                                disabled
                                                           
                            />
                        </div>
                <form action="/buy" method="POST">
                <h3 for="">Direccion de envío</h3><br>
                <div class="form-group">                           
                            <input 
                                type="text" 
                                name="direccion" 
                                id="direccion"
                                class="form-control"
                                placeholder="Direccion"
                                required                           
                            />
                        </div>
                <h3 for="">Importe</h3><br>
                <div class="form-group">                           
                            <input 
                                type="text" 
                                name="valor" 
                                id="valor"
                                class="form-control"
                                value="${{total}}"
                                disabled                        
                            />
                        </div>
                        <input type="text" name="importe" id="importe" value="${{total}}" hidden>
                <div class="text-center"><button class="btn btn-success text-center">Confirmar pago</button></div>

                </form>
                
            </div>
            <div class="col-2"></div>
        </div>
    </div>
</div>