<section class="container mt-3 mb-5" name="registro">
            <h2 class="text-center">Editar Categoría</h2>
            <div class="row justify-content-center mt-3">
                <div class="col-6">
                    <form action="/admin/categorias/update" method="POST">
                        <div class="form-group">
                            <label for="idCategoria">Id <span class="text-danger">*</span></label>
                            <input 
                                type="text" 
                                name="idCategoria" 
                                id="idCategoria"
                                value="{{idCategoria}}"
                                class="form-control"
                                readonly
                                required                           
                            />
                        </div>
                        <div class="form-group">
                            <label for="descripcion">Descripción <span class="text-danger">*</span></label>
                            <input 
                                type="text" 
                                name="descripcion" 
                                id="descripcion"
                                class="form-control"
                                value="{{descripcion}}"
                                required                           
                            />
                        </div>
                        <div class="text-center">
                            <button type="sumbit" class="btn btn-primary btn-block mt-2">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
        <p>{{message}}</p>
