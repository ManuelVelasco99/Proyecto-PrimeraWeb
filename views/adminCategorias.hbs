<div class="container">
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary mt-3" data-toggle="modal" data-target="#nuevoModal">
  Nueva categoría
</button>

    <div class="row mt-3">
        <div class="col">
            <h2>Categorías</h2>
            <table class="table table-hover text-center">
                <thead>
                    <th>ID</th>
                    <th>Descripcion</th>
                    <th></th>
                    <th></th>
                </thead>
                <tbody>
                    {{#each categorias}}
                    <tr>
                        <td>{{idCategoria}}</td>
                        <td>{{descripcion}}</td>
                        <th>
                            <a href="/admin/categorias/edit?idCategoria={{idCategoria}}">
                                <button class="btn btn-primary" type="button">
                                    Editar 
                                </button>     
                            </a>
                        </th>
                        <th>
                            <a href="/admin/categorias/delete?idCategoria={{idCategoria}}">
                                <button class="btn btn-danger" type="button" onclick="return confirm('Seguro que desea eliminar la categoria {{descripcion}}')">
                                    Eliminar 
                                </button>     
                            </a>
                        </th>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Nuevo -->
<div class="modal fade" id="nuevoModal" tabindex="-1" aria-labelledby="nuevoModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="nuevoModalLabel">Nueva categoría</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/admin/categorias/create" method="post">
                    <div class="form-group">
                        <label for="nombre">Descripción *</label>
                        <input type="text" required placeholder="Descripción" name="descripcion" class="form-control">
                    </div>
                    
                    <button class="btn btn-primary btn-block">Guardar</button>
                </form>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>


